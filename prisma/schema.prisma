generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  invoices Invoice[]
}

model Invoice {
  id         Int    @id @default(autoincrement())
  amount     Int
  status     String
  customerId Int
  user       User   @relation(fields: [customerId], references: [id])
}
